---
/**
 * Gothic Frame Component
 * Uses real assets from assets/graphics/frames/ for border-image implementation
 * Never generates graphics - only uses provided Gothic assets
 */
import '../css/components/gothic-frame.css';

export interface Props {
  variant?: 'ornate' | 'simple' | 'heavy' | 'carved' | 'runic';
  size?: 'thin' | 'medium' | 'thick' | 'heavy';
  class?: string;
  background?: 'stone' | 'parchment' | 'burned' | 'none';
}

const { 
  variant = 'ornate', 
  size = 'medium', 
  class: className = '',
  background = 'stone'
} = Astro.props;

const frameAssets = {
  ornate: 'frame-01.png',
  simple: 'frame-02.png',
  heavy: 'frame-03.png',
  carved: 'frame-04.png',
  runic: 'frame-05.png',
};

const frameAsset = frameAssets[variant];
const borderWidthValue = `var(--gothic-border-${size})`;
---

<div
  data-gothic-frame
  data-variant={variant}
  data-size={size}
  data-background={background}
  class={className}
  style={{
    '--frame-asset': `url('/assets/graphics/frame/${frameAsset}')`,
    '--border-width': borderWidthValue
  }}
>
  <slot />
</div>
